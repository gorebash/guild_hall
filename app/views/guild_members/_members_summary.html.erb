
<div class="card border shadow rounded mb-3">
  <div class="card-body">
    <div class="card-title">
      Members (<%= members.count %>)
    </div>
    <div class="d-flex flex-wrap justify-content-center">
      <% members.each do |user| %>
        
        <div class="text-center">
          <% if current_user.avatar.attached? %>
            <%= image_tag(current_user.avatar, class: "profile-icon") %>
            <br/>
          <% end %>
          <span class="mx-2">
            <%= link_to user.username, user_path(user) %>
          </span>
          <div>
            <p class="badge text-bg-success mx-3"><%= membership_for(user, @guild).role.titleize %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="card-footer d-flex justify-content-start">
    <span class="mx-2"><%= link_to "All members", members_path %></span>
  </div>
</div>