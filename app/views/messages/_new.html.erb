
<%= turbo_frame_tag Message.new do %>
    <%= form_for(Message.new, html: {class: "row g-3", role: "form"}, url: guild_message_path(@guild, @message)) do |f| %>
        <div class="col">
            <%= f.text_field :body, class: "form-control", autocomplete: "off", autofocus: true %>
        </div>
        <div class="col-auto">
            <%= f.button nil, class: "btn m-0 p-0" do %>
                <i class="bi bi-arrow-right-circle-fill" style="font-size:1.6em;"></i> 
            <% end %>
        </div>

        <%# f.hidden_field :guild_id, value: params[:id] %>
    <% end %>
<% end %>