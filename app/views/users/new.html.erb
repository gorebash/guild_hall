

<div class="ui raised very padded text container segment">
  <div class="column">
    <h2 class="ui header">
      <div class="content">
        Create your account
      </div>
    </h2>
    <%= form_with(model: @user, class: "ui large form", local: true) do |f| %>
      
      <div class="field">
          <%= f.label :username %>
          <%= f.text_field :username, placeholder: "Username" %>
      </div>
      <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email, placeholder: "Email address" %>
      </div>
      <div class="field">
          <%= f.label :password %>
          <%= f.text_field :password, placeholder: "Password" %>
      </div>
      
      <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "ui fluid large primary submit button") %>
      
      <%= render 'shared/errors', obj: @user %>
    <% end %>

    <div class="ui message">
      New to Guild Hall?
      <%= link_to "Sign Up", signup_path %>
    </div>
  </div>
</div>