
<div class="container text-center mt-5">
  <h4><i class="bi bi-fire" style="font-size:5rem; color:indigo;"></i></h4>
  <h2>Chat Room</h2>
</div>

<div class="container mt-3">
  <div class="row g-5">
    <div class="col">
      <div class="card border shadow bg-body rounded chatbox">
        
        
        <%= turbo_stream_from "messages" %>

        <div class="card-body" id="messages-outer">
          <div class="ui feed" id="message-container"> 
            <%= turbo_frame_tag "messages" do %>
              <%= render @messages %>
            <% end %>
          </div>
        </div>

        <div class="card-footer">
          <%= form_for(@message, html: {class: "row g-3", role: "form"}, url: message_path) do |f| %>
            <div class="col">
              <%= f.text_field :body, class: "form-control", autocomplete: "off", autofocus: true %>
            </div>
            <div class="col-auto">
              <%= f.button nil, class: "btn btn-primary" do %>
                  <%# <i class="inverted edit icon"></i> %>
                  Send
              <% end %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
    
    <div class="col-4">
        <div class="card border shadow rounded">
          <div class="content">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Active</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Link</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Link</a>
              </li>
              <li class="nav-item">
                <a class="nav-link disabled">Disabled</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
  </div>
</div>