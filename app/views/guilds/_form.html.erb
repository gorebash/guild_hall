<%= form_with(model: guild) do |form| %>
  <% if guild.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(guild.errors.count, "error") %> prohibited this guild from being saved:</h2>

      <ul>
        <% guild.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <hr/>

  <div class="mb-3">
    <p>Add an eye-popping banner image for your guild</p>
    <%= form.label :banner_image, class: "form-label" %><br />
    <%= form.file_field :banner_image, class: "form-control" %>
  </div>

  <hr/>

  <div class="mb-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
