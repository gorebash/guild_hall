<div class="card border shadow rounded mb-3">
  <div class="card-body">
    <div class="card-title">Attending (<%= event.accepted().count %>)</div>
    <div class="d-flex flex-wrap mb-3">
      <% event.accepted().each do |attendee| %>
        <%= render "attendees/attendee", attendee: attendee %>
      <% end %>
   </div>

   <hr/>
   <div class="card-title">Tentative (<%= event.tentative().count %>)</div>
   <div class="d-flex flex-wrap mb-3">
      <% event.tentative().each do |attendee| %>
        <%= render "attendees/attendee", attendee: attendee %>
      <% end %>
   </div>
   
   <hr/>
   <div class="card-title">Can't make it (<%= event.declined().count %>)</div>
   <div class="d-flex flex-wrap mb-3">
      <% event.declined().each do |attendee| %>
        <%= render "attendees/attendee", attendee: attendee %>
      <% end %>
   </div>

  </div>
</div>