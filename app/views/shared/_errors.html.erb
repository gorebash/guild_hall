<% if obj.errors.any? %>
  <div class="ui negative message">
    <i class="close icon"></i>
    <h4 class="header">The following errors prevented the <%= obj.class.name.downcase %> from being saved</h4>
    <ul class="list">
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>