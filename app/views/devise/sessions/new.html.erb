
<div class="row">
  <div class="col-sm-12">
    <h2>Welcome to the Guild Hall</h2>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="card border shadow bg-body rounded mt-5">
      <div class="card-body">
        <h5 class="card-title text-center">
          <i class="bi bi-power"></i>
          Log in to continue
        </h5>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.text_field :email, autofocus: true, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :password, "Password", class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="mb-3">
              <%= f.check_box :remember_me, class: "form-label" %>&nbsp;
              <%= f.label :remember_me, class: "" %>
            </div>
          <% end %>
          <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="card-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="card mt-5">
      <div class="card-body">
        <h5 class="card-title">Or</h5>
        <p class="card-text">Sign Up</p>
        <a href="#" class="btn btn-primary">Sign Up</a>
      </div>
    </div>
  </div>
</div>
